FROM ubuntu:latest

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get -q update -y
RUN apt-get -qq install -y sudo make cmake ca-certificates patch iputils-ping cpio automake autoconf libtool cmake-data git vim gcc g++ gfortran flex doxygen graphviz pandoc python2.7 libmpich-dev libhdf5-mpich-dev libcereal-dev liblapacke-dev libexodusii-dev libscotch-dev libmetis-dev python-pip texlive-font-utils clang clang-format llvm ccache texlive-latex-base texlive-fonts-recommended texlive-latex-recommended gdb wget curl lcov libboost-all-dev libclang-dev llvm-dev
RUN wget -O /usr/bin/doxy-coverage https://raw.githubusercontent.com/alobbs/doxy-coverage/master/doxy-coverage.py
RUN chmod +x /usr/bin/doxy-coverage

RUN groupadd -r flecsi
RUN useradd -r -m -g flecsi -G sudo flecsi
RUN echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

USER flecsi
WORKDIR /home/flecsi

COPY scripts/ scripts/
COPY scripts/USE_SERVER.lic /opt/intel/licenses/
RUN scripts/install.sh

ENV PATH=/home/flecsi/.local/bin:/usr/lib/ccache:${PATH}
ENV PYTHONPATH=/usr/local/lib/python2.7/site-packages${PYTHONPATH:+:}${PYTHONPATH}
ENV OPENMPI=true
RUN pip install --user codecov coverxygen gcovr Sphinx recommonmark sphinx_rtd_theme breathe

ENV http_proxy http://proxyout.lanl.gov:8080
ENV https_proxy http://proxyout.lanl.gov:8080
ENV no_proxy "localhost,127.0.0.1,lanl.gov,*.lanl.gov"
ENV GIT_SSL_NO_VERIFY 1

#RUN scripts/build_openmpi.sh

ENTRYPOINT ["scripts/entrypoint.sh"]
CMD ["bash"]

